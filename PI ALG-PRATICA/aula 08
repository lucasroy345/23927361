// Exercício 3: Permita que o usuário digite o número inicial, e mostre em ordem
//decrescente até 0.
#include<stdio.h>
int main()
{
int escolha;

printf("\n\t Escola um numero para ver sua contagem : \n");
scanf("%d",&escolha);
printf("\n\t Imprimir os números de %d até 0 : \n", escolha);
while (escolha>=0)
{
printf(" %d\n",escolha);
escolha--;
}
return 0;

}



// Exercício 2: Imprima os números na forma decrescente 50, 49, ...1
#include<stdio.h>
int main()
{
int num;
num=50;
printf("\n\t Imprimir os números de 1 até 50 : \n");
while (num>=1)
{
printf(" %d\n",num);
num--;
}
return 0;
}




//Tabuada com while 

#include<stdio.h>
int main()
{
int num,contador=-1;

printf("\n\t Digite o numero que vc gostaria de multiplicar: \n");
scanf("%d",&num);

while (contador<=10)//while é limitador 
{
int resultado= num * contador;
printf(" %d * %d = %d\n",num,contador,resultado);
contador++;
}
return 0;

}
