#include <stdio.h>

int main()
{
   
  
   float num1,num2,soma,sub,mult,divi; 
   char opção;
   
  refaz:
   
   printf("digite o primeiro numero:");
   scanf("%f",&num1);
   
   printf("digite o segundo numero:");
   scanf("%f",&num2);
   
   soma = num1+num2;
   printf("A soma dos valores é:%f\n",soma);
   
   sub = num1-num2;
   printf("A subtração dos valores é:%f\n",sub);
   
   mult = num1*num2;
   printf("A multiplicação dos valores é:%f\n",mult);

   divi= num1/num2;
   printf("A divisão dos valores é:%f\n",divi);
   
   printf("Deseja realizar outro calculo (s/n):");
   scanf("%s",&opção);
   
   if (opção =='s'){
   
   goto refaz;
   }
   
   if (opção =='n'){
   
   printf("obrigo finalizado o seu calculo.");
   
   }
   else 
   printf("Digite 's' ou 'n'\n");
   goto refaz;
   
    return 0;
}











